      <h2 class="title">LANGUAGES</h2>
      <canvas id="pieChart" height="600" width="600"></canvas>
    </div>
  </div> <!-- /.slide -->

  <div class="slide active" >
    <div class="intro">
      <h2 class="title">REPOS</h2>
      <canvas id="barChart" height="600" width="600"></canvas>
    </div>
  </div> <!-- /.slide -->

  <div class="slide">
    <div class="intro">
      <h2 class="title">COMMITS</h2>
      <canvas id="commitsChart" width="700" height="700"></canvas>
    </div>
  </div> <!-- /.slide -->

</div> <!-- /.section -->
