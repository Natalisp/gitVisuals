<script type="text/javascript">
    window.currentUser = {
        id: "<%= current_user.id %>",
        username: "<%= current_user.username %>",
        repos_url: "<%= current_user.repos_url %>",
        token: "<%= current_user.token %>"
    }
</script>
<ul id="menu">
  <li data-menuanchor="firstPage"><a href="#firstPage">Home</a></li>
  <li data-menuanchor="secondPage"><a href="#secondPage/1">Visualization</a></li>
  <li><%= link_to("Sign out", destroy_user_session_path, method: "delete") if user_signed_in?%></li>
</ul>

<div class="section active" id="section0" data-anchor="firstPage">
  <%= render partial: "users/home_partials/icon", locals: {user: @user} %>

  <%= render "users/home_partials/navbar" %>

  <%= render partial: "users/home_partials/follow", locals: {user: @user} %>
</div> <!-- /.section -->

